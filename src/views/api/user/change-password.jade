div.modal.fade#changePassword(tabindex="-1", role="dialog")
  form#changePassword.form-horizontal(method='post', action="change-password")
    .modal-dialog(role="document", style='margin-top: 180px; color: black')
      .modal-content
        .modal-header
          button(type="button", class="close", data-dismiss="modal", aria-label="Close")
            span(aria-hidden="true") &times;
          h4.modal-title#myModalLabel Modal title
        .modal-body
          .form-group
            label.col-md-4.control-label Password
            .col-md-8
              input.form-control(type="password", name="password")
          .form-group
            label.col-md-4.control-label Password confirm
            .col-md-8
              input.form-control(type="password", name="password-confirm")
        .modal-footer
          button.btn.btn-primary(type="submit") Save changes
          button.btn.btn-default(type="button", data-dismiss="modal") Close
